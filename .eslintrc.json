{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "curly": [
            1,
            "all"
        ],
        "indent": [
            0,
            4
        ],
        "quotes": [
            2,
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "semi": [
            1,
            "always"
        ],
        "brace-style": [
            2,
            "stroustrup"
        ],
        "no-lonely-if": 2,
        "no-console": 0,
        "space-before-function-paren": 0,
        "space-before-blocks": 2,
        "keyword-spacing": 2,
        "semi-spacing": 2,
        "arrow-spacing": 2,
        "no-unused-vars": 1
    }
}